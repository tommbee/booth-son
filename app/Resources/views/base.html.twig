    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />

        <noscript>
            <link rel="stylesheet" href="{{ asset('build/css/main.css') }}">
        </noscript>

        <style type="text/css">
            .loading {
                position: fixed;
                width: 100%;
                height: 100%;
                background: white;
                z-index: 100;
                top: 0;
                left: 0;
                opacity: 1;
                background: url({{ asset('images/ajax-loader.gif') }}) no-repeat center center white;
                background-size: 24px 24px;
            }
        </style>

    </head>

    <body>
        <div class="loading"></div>
        {% block body %}{% endblock %}
    </body>
    <script type="text/javascript" src="{{ asset('build/js/site.min.js') }}"></script>
    <script>

        var styleSheets = [
            "{{ asset('build/css/main.css') }}",
        ];
        for (var i = 0, length = styleSheets.length; i < length; i++) {
            var link = document.createElement("link");
            link.href = styleSheets[i];
            link.type = "text/css";
            link.rel = "stylesheet";
            link.media = "screen,print";
            document.getElementsByTagName("head")[0].appendChild(link);
            setTimeout(function () {
                window.loadEverything();
            }, 1000);
        }

    </script>
</html>
